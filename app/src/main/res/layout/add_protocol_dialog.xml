<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_protocol_dialog"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonss_shape">
        <TextView
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="设备类型："/>
        <Spinner
            android:id="@+id/add_protocol_deviceType_spinner"
            style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textAlignment="textStart"
            android:background="@drawable/divider_line_bottom"
            android:gravity="start" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonss_shape">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textColor="@color/__picker_black_40"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="检验依据："/>
        <TextView
            android:id="@+id/add_protocol_checkReference_et"
            android:background="@drawable/divider_line_bottom"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:focusable="false"
            android:textColor="@color/__picker_black_40"
            android:hint="请选择检验依据"
            android:ellipsize="marquee"
            android:paddingLeft="5dp"
            android:textColorHint="@color/__picker_black_40"
            android:layout_margin="2dp"
            android:gravity="center_vertical" />
    </LinearLayout>

