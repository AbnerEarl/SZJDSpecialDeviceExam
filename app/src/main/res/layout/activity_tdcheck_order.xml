<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frank.jinding.UI.TechnicorActivity.TDCheckOrder">

    <include
        layout="@layout/back_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include4" />
    <ListView
        android:id="@+id/lv_task"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="1.2"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="开始时间: "
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="2"
                android:id="@+id/start_date"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:textColor="@color/__picker_black_40"
                android:background="@drawable/divider_line_bottom"/>
            <TextView
                android:layout_weight="1.2"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="结束时间: "
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="2"
                android:id="@+id/end_date"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:textColor="@color/__picker_black_40"
                android:layout_height="match_parent"
                android:background="@drawable/divider_line_bottom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="委托单位: "
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/divider_line_bottom">
                <EditText
                    android:id="@+id/order_search_org"
                    android:background="@drawable/divider_line_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <Button
                android:layout_weight="1.2"
                android:id="@+id/search_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="查询"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/buttonss_shape"/>
            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
