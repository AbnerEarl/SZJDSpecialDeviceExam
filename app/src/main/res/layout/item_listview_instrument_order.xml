<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@mipmap/no_check" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dispatching_projectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/actual_time"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextView\nb"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/actual_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dispatching_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/order_check_status_app"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="单位"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_check_status_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="状态"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_address"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/project_address" />

            <TextView
                android:id="@+id/sendPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/dispatching_checkBox"
                android:layout_toRightOf="@+id/icon_address"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextView\nb"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/dispatching_checkBox"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_apply_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  长按查看订单详细信息" />
    </LinearLayout>
</LinearLayout>
