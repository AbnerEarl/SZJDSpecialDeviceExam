<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_blue"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/titleleftch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:layout_marginStart="13dp"
        android:background="#00000000"
        android:src="@mipmap/back_black" />

    <TextView
        android:id="@+id/titlecenterch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单详情"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/titleleftch"
        android:layout_toEndOf="@+id/titleleftch"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp" />

    <ImageButton
        android:id="@+id/titlerightch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="#00000000"
        android:src="@android:drawable/ic_menu_upload"
        android:layout_alignTop="@+id/titlerightadd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/titlerightadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/titlerightch"
        android:layout_toStartOf="@+id/titlerightch" />

</RelativeLayout>