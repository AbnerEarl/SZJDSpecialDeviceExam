<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="报告详情"
            android:textColor="@color/__picker_black_40"
            android:textSize="22sp" />
        <ImageButton

            android:layout_alignParentRight="true"
            android:id="@+id/exit_report_detail"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@drawable/ic_clear_red_700_24dp"/>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_first_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/checker_blue"
            android:gravity="center_vertical"
            android:text="检验组长："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/report_first_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_first_time_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_access_time_blue_800_18dp"
            android:gravity="center_vertical"
            android:text="检验时间："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/report_first_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_second_person_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_perm_identity_green_800_18dp"
            android:gravity="center_vertical"
            android:text="报告填写人："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/report_second_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_access_time_green_800_18dp"
            android:gravity="center_vertical"
            android:text="提交时间："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/second_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_person_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_third_person_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_perm_identity_green_800_18dp"
            android:gravity="center_vertical"
            android:text="报告审核人："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/report_third_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
       android:id="@+id/third_time_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_third_time_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_access_time_green_800_18dp"
            android:gravity="center_vertical"
            android:text="提交时间："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/third_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth_person_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_fourth_person_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_perm_identity_green_800_18dp"
            android:gravity="center_vertical"
            android:text="报告审批人："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/report_fourth_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth_time_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/report_fourth_time_front"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_access_time_green_800_18dp"
            android:gravity="center_vertical"
            android:text="提交时间："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fourth_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/divider_line_bottom"
            android:focusable="false"
            android:gravity="center_vertical"
            android:textColor="@color/__picker_black_40"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/action_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="拒绝"
            android:textSize="18sp" />

        <Button
            android:id="@+id/action_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="通过"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
