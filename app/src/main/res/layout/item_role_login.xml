<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_role_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/report" />

    <TextView
        android:id="@+id/login_role_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_role_image"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="TextView" />

    <RadioButton
        android:id="@+id/radio_message"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/login_role_image"
        android:layout_alignRight="@+id/login_role_image"
        android:layout_alignTop="@+id/login_role_image"
        android:background="@drawable/tipback"
        android:button="@null"
        android:checked="true"
        android:focusable="false"
        android:visibility="invisible" />

</RelativeLayout>
