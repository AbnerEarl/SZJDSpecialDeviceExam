<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.frank.jinding.UI.DepartorActivity.DepartmentHeaderFinance">
    <include
        layout="@layout/back_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include4" />

    <ListView
        android:id="@+id/lv_tasksss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_history"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include4"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1"
        android:text="内容选择: "
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/search_content_spinner"
        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/include4"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/textView35"
        android:layout_toRightOf="@+id/textView35"
        android:layout_weight="0.9" />


    <ImageButton
        android:id="@+id/search_history"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_alignEnd="@+id/lv_tasksss"
        android:layout_alignRight="@+id/lv_tasksss"
        android:layout_below="@+id/search_content_spinner"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="0.2"
        android:background="@drawable/divider_line_bottom"
        android:src="@android:drawable/ic_menu_search" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_content_spinner"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.4"
        android:text="申 请 人: "
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/applicant_spinner"
        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/search_content_spinner"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toLeftOf="@+id/search_history"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toStartOf="@+id/search_history"
        android:layout_weight="0.4" />

</RelativeLayout>
